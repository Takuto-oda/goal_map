<% layout('layouts/boilerplate') %>
<div class="row mt-5">
    <div class="col-6 offset-3">
        <form action="/goal" method="post">
            <div class="mb-4">
                <label class="form-label" for="goal">タイトル</label>
                <input type="text" name="goal[title]" id="goal" class="form-control">
            </div>
            <div class="mb-4">
                <label class="form-label" for="description">内容</label>
                <input type="text" name="goal[description]" id="description" class="form-control">
            </div>
            <div class="mb-4">
                <label class="form-label" for="targetDate">目標達成予定日</label>
                <input type="date" name="goal[targetDate]" id="targetDate" class="form-control">
            </div>
            <div class="mb-4">
                <button class="btn btn-success">登録</button>
            </div>
        </form>
    </div>
</div>